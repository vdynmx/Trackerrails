<% if user_signed_in? %>
  <%= image_tag(current_user.avatar_url) if current_user.avatar? %>
  <%= current_user.username %>
  <%= link_to t('layout.menu.buttons.logout'), destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to t('layout.menu.buttons.login'), new_user_session_path %>
<% end %>

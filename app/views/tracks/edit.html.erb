<script src="http://maps.googleapis.com/maps/api/js"></script>
<%= link_to 'Back to tracks list', tracks_path %>
<div class="track">
  <%= form_for @track do |f| %>
    <%= f.hidden_field :id %>
    <%= f.text_field :title %>
    <%= f.text_area :description %>
    <%= f.check_box :private %>
    <%= f.submit %>
    <div class='track-map'></div>
    <% if @track.track_stat %>
      <div class='track-stats'>
        <%= render @track.track_stat %>
      </div>
    <% end %>
  <% end %>
</div>
